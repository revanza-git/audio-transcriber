# Record to Text Application Environment Variables

# === BACKEND CONFIGURATION ===
# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_DEBUG=False

# CORS Configuration (comma-separated list of allowed origins)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Timeout Configuration (in minutes)
DEFAULT_TIMEOUT_MINUTES=10
MIN_TIMEOUT_MINUTES=1
MAX_TIMEOUT_MINUTES=60

# File Storage Configuration
UPLOAD_DIR=uploads
OUTPUT_DIR=outputs

# Whisper Model Configuration
# Options: tiny, base, small, medium, large, large-v2, large-v3
PREFERRED_WHISPER_MODEL=large-v3
FALLBACK_WHISPER_MODELS=medium,base,tiny

# === FRONTEND CONFIGURATION ===
# API Configuration
VITE_API_BASE_URL=http://localhost:8000

# Development Server Configuration
VITE_DEV_PORT=5173
VITE_DEV_HOST=localhost

# Application Configuration
VITE_APP_TITLE=Record to Text
VITE_MAX_FILE_SIZE_MB=500

# === PRODUCTION OVERRIDES ===
# For production deployment, override these values:
# BACKEND_HOST=0.0.0.0
# BACKEND_PORT=80
# CORS_ALLOWED_ORIGINS=https://yourdomain.com
# VITE_API_BASE_URL=https://api.yourdomain.com 